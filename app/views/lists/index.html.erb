<div class="container py-5">
  <div class="align-items-center justify-content-center">
    <div class="card-category" style="background-image: url(<%= asset_path('matrix.jpg') %>)">
    <div class="text-center">
      <h1>Save any kind of movies</h1>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success' %>
  </div>

 <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list) do %>
          <div class="card-category" style="background-image: url(<%= asset_path('matrix2.jpg') %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>